{
  "wtcp-bic-extend": {
    "settings": {
      "index": {
        "number_of_shards": "5",
        "number_of_replicas": "1"
      }
    }
  },
  "mappings": {
    "resource": {
      "dynamic": "false",
      "properties": {
        "id": {
          "type": "keyword",
          "ignore_above": 256
        },
        "code": {
          "type": "keyword",
          "ignore_above": 256
        },
        "title": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          },
          "analyzer": "ik_max_word"
        },
        "subTitle": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          },
          "analyzer": "ik_max_word"
        },
        "slogan": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          },
          "analyzer": "ik_max_word"
        },
        "summary": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          },
          "analyzer": "ik_max_word"
        },
        "description": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          },
          "analyzer": "ik_max_word"
        },
        "content": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          },
          "analyzer": "ik_max_word"
        },
        "type": {
          "type": "keyword",
          "ignore_above": 256
        },
        "price": {
          "type": "double"
        },
        "principalId": {
          "type": "keyword",
          "ignore_above": 256
        },
        "weight": {
          "type": "integer"
        },
        "images": {
          "type": "keyword",
          "ignore_above": 256
        },
        "vrImageUrl": {
          "type": "keyword",
          "ignore_above": 256
        },
        "videoResources": {
          "type": "keyword",
          "ignore_above": 256
        },
        "videos": {
          "type": "keyword",
          "ignore_above": 256
        },
        "audios": {
          "type": "keyword",
          "ignore_above": 256
        },
        "tags": {
          "type": "keyword",
          "ignore_above": 256,
          "copy_to": "allTags"
        },
        "relateTags": {
          "type": "keyword",
          "ignore_above": 256,
          "copy_to": "allTags"
        },
        "allTags": {
          "type": "keyword",
          "ignore_above": 256
        },
        "publishStatus": {
          "type": "integer"
        },
        "deptCode": {
          "type": "keyword",
          "ignore_above": 256
        }
      }
    }
  }
}